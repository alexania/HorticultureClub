---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  showHeader?: boolean;
  showFooter?: boolean;
  contentClass?: string;
}

const { 
  title,
  description,
  image,
  noIndex = false,
  showHeader = true,
  showFooter = true,
  contentClass = ""
} = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
  image={image}
  noIndex={noIndex}
>
  {showHeader && <Header />}
  
  <main class={`main-content ${contentClass}`}>
    <slot />
  </main>
  
  {showFooter && <Footer />}
</BaseLayout>

<style>
  .main-content {
    @apply min-h-screen py-xl;
  }
</style>