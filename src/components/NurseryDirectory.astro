<script>
  // Category filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const categoryTags = document.querySelectorAll('.category-tag');
    
    categoryTags.forEach(tag => {
      tag.addEventListener('click', function() {
        // Remove active class from all tags
        categoryTags.forEach(t => t.classList.remove('ring-2', 'ring-offset-2'));
        
        // Add active class to clicked tag
        this.classList.add('ring-2', 'ring-offset-2');
        
        // In a full implementation, this would filter the nursery results
        console.log(`Filtering by: ${this.textContent.trim()}`);
        
        // Add mystical glow effect
        this.classList.add('mystical-glow');
        setTimeout(() => {
          this.classList.remove('mystical-glow');
        }, 2000);
      });
    });
    
    // Nursery card hover effects
    const nurseryCards = document.querySelectorAll('.nursery-card');
    nurseryCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        const marker = this.querySelector('.nursery-marker');
        if (marker) {
          marker.classList.add('animate-floating');
        }
      });
      
      card.addEventListener('mouseleave', function() {
        const marker = this.querySelector('.nursery-marker');
        if (marker) {
          marker.classList.remove('animate-floating');
        }
      });
    });
  });
</script>

<style>
  .category-tag {
    transition: all 0.3s ease;
  }
  
  .category-tag:hover {
    transform: translateY(-2px);
  }
  
  .nursery-card:hover .nursery-marker {
    transform: scale(1.1);
    transition: transform 0.3s ease;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .nursery-grid {
      grid-template-columns: 1fr;
    }
    
    .directory-features {
      grid-template-columns: 1fr;
    }
  }
</style>